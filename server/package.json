{
  "name": "server",
  "version": "1.0.0",
  "description": "Todd Graphql Server",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc --outDir dist && cp -r src/prisma dist/",
    "dev": "NODE_ENV=development ts-node-dev -r dotenv/config --no-notify --respawn --transpile-only src",
    "generate": "npm -s run generate:nexus && npm -s run generate:prisma",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "generate:prisma": "npx prisma migrate dev"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "makyfj",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.8.0",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "graphql-middleware": "^6.1.13",
    "nexus": "^1.1.0"
  },
  "devDependencies": {
    "prisma": "^3.8.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
