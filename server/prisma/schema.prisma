generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vote {
  id       String @id @default(cuid())
  createdAt DateTime @default(now())

  votedFor ToddIdea @relation(name: "votesFor", fields: [votedForId], references: [id])
  votedForId String
  votedAgainst ToddIdea @relation(name: "votesAgainst", fields: [votedAgainstId], references: [id])
  votedAgainstId String

  @@index([votedForId])
  @@index([votedAgainstId])
}

model ToddIdea {
  id String @id @default(cuid())

  idea String
  imageUrl String
  voteFor Vote[] @relation("votesFor")
  voteAgainst Vote[] @relation("votesAgainst")
}