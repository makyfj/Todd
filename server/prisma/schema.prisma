generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id Int @id @default(autoincrement())

  idea         String
  imageUrl     String
  votesFor     Vote[] @relation("votesFor")
  votesAgainst Vote[] @relation("votesAgainst")
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  votedFor       Idea @relation(name: "votesFor", fields: [votedForId], references: [id])
  votedForId     Int
  votedAgainst   Idea @relation(name: "votesAgainst", fields: [votedAgainstId], references: [id])
  votedAgainstId Int

  @@index([votedForId])
  @@index([votedAgainstId])
}

